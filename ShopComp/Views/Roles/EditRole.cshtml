@using Microsoft.AspNetCore.Identity
@using ShopComp.ViewModels.User
@model ChangeRoleViewModel
@{
    Layout = "_Layout2";
}
<div class="container">
    <h2>Изменение ролей для пользователя @Model.UserEmail</h2>
    <form class="container mt-4" asp-action="EditRole" asp-controller="Roles" method="post">
        <input type="hidden" name="userId" value="@Model.UserId" />
        <div class="form-group">
            @foreach (IdentityRole role in Model.AllRoles)
            {
                <input type="checkbox" name="roles" value="@role.Name"
                       @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                }
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Сохранить</button>
    </form>
</div>

