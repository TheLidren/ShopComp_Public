@model IEnumerable<ShopComp.Models.Category>
@{
    Layout = "_Layout2";
}
<table class="container mt-4 table table-bordered">
    <tr>
        <th>Номер</th>
        <th>Название</th>
        <th>Описание</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Tittle</td>
            <td>@item.Desc</td>
            <td>
                <form asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.Id" method="post" class="text-center">
                    <a class="btn btn-sm btn-primary" asp-action="EditCategory" asp-controller="Category" asp-route-id="@item.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>