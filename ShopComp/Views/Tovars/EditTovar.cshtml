@model ShopComp.Models.Tovar
@{
    Layout = "_Layout2";
}
<div class="m-5">
    <h2>Товар № @Model.Id</h2>
    <form method="post" asp-controller="Tovars" asp-action="EditTovar">
        <div class="form-row">
            <div class="m-3 form-group col-md-6">
                <label class="mb-2" for="Tittle">Название</label>
                <input type="text" class="form-control" name="Tittle" value="@Model.Tittle" placeholder="Название устройства" required pattern="^[а-яА-ЯёЁa-zA-Z0-9\s\-]+$" maxlength="50" title="Неверный формат ввода">
            </div>
            <div class="m-3 form-group col-md-6">
                <label class="mb-2" for="shortDesc">Краткое описание</label>
                <textarea class="form-control" name="shortDesc" rows="3" placeholder="Краткое описание" required pattern="^[а-яА-ЯёЁa-zA-Z0-9\s\-,.:]+$" maxlength="200" title="Неверный формат ввода">@Model.ShortDesc</textarea>
            </div>
            <div class="m-3 form-group col-md-6">
                <label class="mb-2" for="LongDesc">Описание</label>
                <textarea class="form-control" name="LongDesc" rows="3" placeholder="Подробное описание" required pattern="^[а-яА-ЯёЁa-zA-Z0-9\s\-,.:]+$" maxlength="500" title="Неверный формат ввода">@Model.LongDesc</textarea>
            </div>
            <div class="m-3 form-group col-md-6">
                <label class="mb-2" for="Img">Вставьте картинку</label>
                <input type="url" class="form-control" value="@Model.Img" name="Img" required>
            </div>
            <div class="m-3 form-group col-md-6 w-25">  
                <label class="mb-2" for="Price">Цена</label>
                <input type="number" min="0" max="100000" placeholder="Цена" value="@Model.Price" class="form-control" name="Price" required>
            </div>
            <div class="m-3 form-group col-md-6 w-25">
                <label class="mb-2" for="Amount">Количество</label>
                <input type="number" min="0" max="100000" value="@Model.Amount" class="form-control" name="Amount" placeholder="Количество" required>
            </div>
            <div class="m-3 form-group col-md-6">
                <label class="mb-2" for="Categories">Выберите категорию</label>
                <br />
                <select class="form-select" name="CategoriesId" required>
                    @foreach (var blah in ViewBag.CategoryTittle)
                    {
                        <option selected value=@blah.Id>@blah.Tittle</option>
                    }
                    @foreach (var blah in ViewBag.Category)
                    {

                        <option value=@blah.Id>@blah.Tittle</option>
                    }
                </select>
            </div>
            <input type="submit" class="m-3 btn btn-primary mt-3" value="Сохранить" />
        </div>
    </form>
</div>
