@model             ChangePasswordViewModel
@{
    Layout = "_Layout2";
}
<h3>Изменение пароля для пользователя @Model.Email</h3>
<form asp-action="ChangePassword" asp-controller="Account">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
        </div>
        <div class="m-3 form-group col-md-5 text-danger" data-valmsg-summary="true">
            <label asp-for="OldPassword"  class="mb-2 control-label text-dark">Старый пароль</label>
            <input type="text" asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword"></span>
        </div>
        <div class="m-3 form-group col-md-5 text-danger" data-valmsg-summary="true">
            <label asp-for="NewPassword" class="mb-2 control-label text-dark">Новый пароль</label>
            <input type="text" asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>