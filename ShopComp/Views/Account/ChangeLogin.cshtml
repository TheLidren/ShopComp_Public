@model ChangeLoginViewModel
@{
    Layout = "_Layout2";
}
<div class="container">
    <h3 class="mt-4">Изменение логина для пользователя @Model.Email</h3>
    <form asp-action="ChangeLogin" asp-controller="Account">
        <div class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group col-md-5 text-danger" data-valmsg-summary="true">
                <label asp-for="NewLogin" class="mb-2 control-label text-dark">Введите логин</label>
                <input type="email" asp-for="NewLogin" class="form-control" />
                <span asp-validation-for="NewLogin"></span>
            </div>
            <input type="submit" value="Сохранить" class="mt-3 btn btn-primary" />
        </div>
    </form>
</div>