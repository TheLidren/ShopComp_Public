@model             ResetPasswordViewModel
@{
    Layout = "_Layout2";
}
<div class="container">
    <h2>Сброс пароля</h2>
    <hr />
    <form method="post" asp-controller="Account" asp-action="ResetPassword">
        <div class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Code" type="hidden" />
            </div>
            <div class="m-3 form-group col-md-6 text-danger" data-valmsg-summary="true">
                <label asp-for="Password" class="mb-2 control-label text-dark">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="m-3 form-group col-md-6 text-danger" data-valmsg-summary="true">
                <label asp-for="ConfirmPassword" class="mb-2 control-label text-dark">Подтвердите пароль</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </form>
</div>